<body class="albums-body">
    

<h1>Albums for {{albumArtistName}}</h1>

<div class="main-albums">
{{#each albums}}
    <div class="albums-block">
        <div class="albums-image">
            <a href="/tracks/{{id}}"><img src="{{images.1.url}}" alt="album cover {{name}}" onerror=this.src="/images/vinyl-record-5958903__340.webp"></a>
        </div>
        <div class="album-descr">
            <a class="album-name" href="/tracks/{{id}}">{{name}}</a>
            <a href="/tracks/{{id}}"><button>View Tracks</button></a>
        </div>        
    </div>
{{/each}}
</div>

</body>